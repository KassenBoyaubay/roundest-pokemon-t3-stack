generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Task {
  id        Int    @id @default(autoincrement())
  title     String
  userToken String
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  token    String @unique
}

model Example {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  votedFor     Int
  votedAgainst Int
}
