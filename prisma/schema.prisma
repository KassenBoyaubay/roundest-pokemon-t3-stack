generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Task {
  id        Int    @id @default(autoincrement())
  title     String
  userToken String
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  token    String @unique
}

model Example {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  votedFor       Pokemon @relation(name: "votesFor", fields: [votedForId], references: [id])
  votedForId     Int
  votedAgainst   Pokemon @relation(name: "votesAgainst", fields: [votedAgainstId], references: [id])
  votedAgainstId Int

  @@index([votedForId])
  @@index([votedAgainstId])
}

model Pokemon {
  id Int @id

  name      String
  SpriteUrl String

  VoteFor     Vote[] @relation("votesFor")
  VoteAgainst Vote[] @relation("votesAgainst")
}
